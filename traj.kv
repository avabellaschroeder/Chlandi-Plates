    DPEAButton:
        color: 0.280, 0.324, 0.819, 1
        text: "Square3"
        center_x: root.width * 0.8
        y: root.height * 0.65
        background_color: 0, 0, 0, 0
        background_normal: ''
        size_hint: None,None
        size: 200,100
        on_press: root.square3()

    DPEAButton:
        id: square1282
        color: 0.80, 0.324, 0.094, 1
        text: "Move to Control Screen"
        center_x: root.width * 0.2
        y: root.height * 0.9
        background_color: 0, 0, 0, 0
        background_normal: ''
        size_hint: None,None
