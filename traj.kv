        background_color: 0, 0, 0, 0
        background_normal: ''
        size_hint: None,None
        size: 200,100
        on_press: root.circle2()

    DPEAButton:
        color: 0.180, 0.6, 0.187, 1
        text: "Circle3"
        center_x: root.width * 0.2
        y: root.height * 0.65
        background_color: 0, 0, 0, 0
        background_normal: ''
        size_hint: None,None
        size: 200,100
        on_press: root.circle3()


    DPEAButton:
        color: 0.80, 0.324, 0.094, 1
        text: "Square1"
        center_x: root.width * 0.8
        y: root.height * 0.35
        background_color: 0, 0, 0, 0
        background_normal: ''
        size_hint: None,None
        size: 200,100
        on_press: root.square1()

    DPEAButton:
        color: 0.180, 0.6, 0.187, 1
        text: "Square2"
        center_x: root.width * 0.8
